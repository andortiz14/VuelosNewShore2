


    <div class="row">
        <div class="col-lg-12">
            <br />
            <table class="table" width="100%">
                <tr>
                    <td colspan="8">&nbsp;</td>
                </tr>
                <tr>
                    <td colspan="8" style="text-align: center; border-radius: 12px; font-size: 20px; background-color: #044182; color: aliceblue">
                        Vuelos Disponibles
                    </td>
                </tr>
                <tr>
                    <th>Fecha</th>
                    <th>Origen</th>
                    <th>Destino</th>
                    <th>Numero de vuelo</th>
                    <th>Precio Valor</th>
                    <th>Moneda</th>
                    <th></th>
                </tr>
                @foreach (var vuelos in Model)
                {
                    <tr>
                        <td>@vuelos.DepartureDate</td>
                        <td>@vuelos.DepartureStation</td>
                        <td>@vuelos.ArrivalStation</td>
                        <td>@vuelos.FlightNumber</td>
                        <td>@vuelos.Price</td>
                        <td>@vuelos.Currency</td>
                        <td>
                            @using (Html.BeginForm("Guardar", "Home", new {
                                Fecha = vuelos.DepartureDate,
                                Origen = vuelos.DepartureStation,
                                Destino = vuelos.ArrivalStation,
                                NumeroVuelo = vuelos.FlightNumber,
                                Precio = vuelos.Price,
                                Moneda = vuelos.Currency}))
                            {
                              
                                <input class="button btn-success" CssClass="btn btn-success float-center mr-1" id="submit" type="submit" value="Registrar Vuelo" />
                            }
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

